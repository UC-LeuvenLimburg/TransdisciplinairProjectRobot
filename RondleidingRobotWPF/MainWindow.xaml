<Window x:Class="RondleidingRobotWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RondleidingRobotWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="358*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="376*"/>
        </Grid.ColumnDefinitions>
        <Canvas Background="Gray" Name="drawingCanvas" Width="750" Height="400" Margin="25,17,25,17" Grid.ColumnSpan="4"/>
        <Button Content="Start" Name="startButton" Width="50" Grid.Column="1" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Click="startButton_Click"/>
        <Button Content="Stop" Name="stopButton" Width="50" Grid.Column="1" HorizontalAlignment="Left" Margin="0,35,0,0" VerticalAlignment="Top" Click="stopButton_Click"/>

    </Grid>
</Window>
